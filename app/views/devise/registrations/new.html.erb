<div class="container registrarse" style="width: 40%">
  <h2 class='text-center mt-5 mb-5'>Registrarse</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :floating_labels_form, wrapper_mappings: {
    select: :floating_labels_select}) do |f| %>
    <%= f.error_notification %>

   <%# <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
    </div> %>

    <div class="form-inputs">
      <%= f.input :email, required: true,
                  :label => 'Email',
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <div class="input-group">
        <%= f.input :first_name, required: true,
                    :label => 'Nombre',
                    input_html: { autocomplete: "Nombre"}%>

        <%= f.input :last_name, required: true,
                    :label => 'Apellido',
                    input_html: { autocomplete: "Apellido"}%>
        <%= f.input :age, required: true,
                  :label => 'Edad',
                  input_html: { autocomplete: "Edad", class: "edades"}%>
      </div>


      <%= f.input :address, required: true,
                  :label => 'Direccion',
                  input_html: { autocomplete: "Direccion" }%>

      <%= f.input :school, required: true,
                  :label => 'Colegio',
                  input_html: { autocomplete: "Colegio" }%>
      <%= f.input :password, required: true,
                  :label => 'ContraseÃ±a',
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, required: true,
                  :label => 'ConfirmaciÃ³n de ContraseÃ±a',
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrarse", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<br><br>
</div>
