<div class="container log-in">
  <div id="inicio">
<%= image_tag "password.png", style: 'height:250px;width:570px;margin-bottom:' %>
  </div>
   <h2 class='text-center mb-5'>Iniciar sesión</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :floating_labels_form, wrapper_mappings: {
    select: :floating_labels_select}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,

                    required: false,
                    input_html: { autocomplete: "current-password"} %>
        <%= f.input :remember_me, label: :Recuerdame, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Iniciar sesión", class: 'btn btn-primary' %>
      </div>
    <% end %>


  <%= render "devise/shared/links" %>
</div>
