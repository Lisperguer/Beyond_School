<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="video-clase">
        <div class="ratio ratio-21x9">
          <iframe width='420' height='345' src=<%=@section.url_cloudinary%> title="YouTube video" allowfullscreen ></iframe>
        </div>
      </div>
      <div class="card my-4">
        <div class="container">
          <div class="row pt-2">
            <%# <div class="col-2"></div> %>
              <%# <div class="col-4"> %>
                <%# <h5 class="card-header">Sabias que?</h5> %>
                  <div class="card-body">
                    <h5 class="card-title"><strong><%= @section.course.titulo %> - <%= @section.nombre %></strong></h5>
                    <hr>
                    <p class="card-text"><%= @section.course.detalle %></p>
                    <a href="#"><%= link_to "Empezar quiz", quiz_path(@quiz), class: "btn btn-primary m-3 float-end", remote: true %></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

